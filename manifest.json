{
    "name": "Reminder",
    "description": "Extension that reminds",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "dist/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content-script.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}